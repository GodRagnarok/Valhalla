    <script type="text/javascript">
        $(document).ready(function () {
            $('.carousel').slick({
                dots: false,
                infinite: true,
                speed: 500,
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: false,
                duplicate: false
            });
            $('.controls button').on('click', function () {
                var direction = $(this).hasClass('slick-next') ? 'next' : 'prev';
                $('.carousel').slick(direction);
            });
        });
